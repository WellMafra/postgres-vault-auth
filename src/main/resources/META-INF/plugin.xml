<idea-plugin>
    <id>com.github.davidsteinsland.postgresvault</id>
    <name>PostgreSQL Vault Auth</name>
    <vendor>davidsteinsland</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.davidsteinsland.postgresvault.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.davidsteinsland.postgresvault.services.MyProjectService"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij.database">
        <connectionInterceptor implementation="com.github.davidsteinsland.postgresvault.VaultAuth"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.davidsteinsland.postgresvault.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
